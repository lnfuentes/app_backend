<h1 class="fw-light display-5">Admin page</h1>
<div class="line"></div>
<p class="d-flex justify-content-between align-items-center">
    <a class="btn btn-success" data-bs-toggle="collapse" href="#multiCollapseExample1" role="button"
        aria-expanded="false" aria-controls="multiCollapseExample1">Crear Producto</a>
    <button class="btn btn-warning" type="button" data-bs-toggle="collapse" data-bs-target="#multiCollapseExample2"
        aria-expanded="false" aria-controls="multiCollapseExample2">Actualizar Producto</button>
    <button class="btn btn-danger" type="button" data-bs-toggle="collapse" data-bs-target="#multiCollapseExample3"
        aria-expanded="false" aria-controls="multiCollapseExample3">Eliminar Producto</button>

</p>
<div class="row">
    <div class="col">
        <div class="collapse multi-collapse" id="multiCollapseExample1">
            <div class="container mx-auto card">

                <form action="/api/products" method="POST" class="form">
                    <div class="form-floating mb-3">
                        <input type="text" name="title" class="form-control" id="floatingInput" placeholder="Titulo">
                        <label for="floatingInput">Titulo</label>
                    </div>
                    <div class="form-floating">
                        <input type="text" name="description" class="form-control" id="floatingInput"
                            placeholder="Descripcion">
                        <label for="floatingInput">Descripcion</label>
                    </div>
                    <div class="form-floating">
                        <input type="number" name="price" class="form-control" id="floatingInput" placeholder="Precio"
                            min="0">
                        <label for="floatingInput">Precio</label>
                    </div>
                    <div class="form-floating">
                        <input type="text" name="thumbnail" class="form-control" id="floatingInput"
                            placeholder="Imagen">
                        <label for="floatingInput">Imagen (colocar url de la imagen)</label>
                    </div>
                    <div class="form-floating">
                        <input type="text" name="code" class="form-control" id="floatingInput" placeholder="Codigo">
                        <label for="floatingInput">Codigo</label>
                    </div>
                    <div class="form-floating">
                        <input type="number" name="stock" class="form-control" id="floatingInput" placeholder="Stock"
                            min="0">
                        <label for="floatingInput">Stock</label>
                    </div>
                    <div class="form-floating">
                        <input type="text" name="category" class="form-control" id="floatingInput"
                            placeholder="Categoria">
                        <label for="floatingInput">Categoria</label>
                    </div>
                    <button type="submit" class="btn-submit">Crear producto</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="collapse multi-collapse" id="multiCollapseExample2">
            <div class="container mx-auto card">

                <form action="/api/products/update?_method=PUT" method="POST" class="form">
                    <div class="form-floating mb-3">
                        <input type="text" name="id" class="form-control" id="floatingInput" placeholder="Id">
                        <label for="floatingInput">Insertar ID de producto a actualizar</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" name="title" class="form-control" id="floatingInput" placeholder="Titulo">
                        <label for="floatingInput">Titulo</label>
                    </div>
                    <div class="form-floating">
                        <input type="text" name="description" class="form-control" id="floatingInput"
                            placeholder="Descripcion">
                        <label for="floatingInput">Descripcion</label>
                    </div>
                    <div class="form-floating">
                        <input type="number" name="price" class="form-control" id="floatingInput" placeholder="Precio"
                            min="0">
                        <label for="floatingInput">Precio</label>
                    </div>
                    <div class="form-floating">
                        <input type="text" name="thumbnail" class="form-control" id="floatingInput"
                            placeholder="Imagen">
                        <label for="floatingInput">Imagen (colocar url de la imagen)</label>
                    </div>
                    <div class="form-floating">
                        <input type="text" name="code" class="form-control" id="floatingInput" placeholder="Codigo">
                        <label for="floatingInput">Codigo</label>
                    </div>
                    <div class="form-floating">
                        <input type="number" name="stock" class="form-control" id="floatingInput" placeholder="Stock"
                            min="0">
                        <label for="floatingInput">Stock</label>
                    </div>
                    <div class="form-floating">
                        <input type="text" name="category" class="form-control" id="floatingInput"
                            placeholder="Categoria">
                        <label for="floatingInput">Categoria</label>
                    </div>
                    <input type="hidden" name="_method" value="PUT">
                    <button type="submit" class="btn-submit">Actualizar producto</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="collapse multi-collapse" id="multiCollapseExample3">
            <div class="container mx-auto card">
                <form action="/api/products/delete?_method=DELETE" method="POST" class="form">
                    <div class="form-floating mb-3">
                        <input type="text" name="id" class="form-control" id="floatingInput" placeholder="Id">
                        <label for="floatingInput">Insertar ID de producto a elminar</label>
                    </div>
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn-submit">Eliminar producto</button>
                </form>
            </div>
        </div>
    </div>
</div>