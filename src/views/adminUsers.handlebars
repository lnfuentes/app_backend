<h1 class="fw-light display-5">Admin page</h1>
<div class="line"></div>

<div class="d-flex justify-content-evenly">
    <button id="fetch-users" class="btn-admin">Visualizar usuarios</button>
    <form action="/api/users?_method=DELETE" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn-admin">Eliminar usuarios inactivos</button>
    </form>
</div>
<div class="d-flex justify-content-center">
    <form action="/api/users?_method=PUT" method="POST" class="form-user">
            <div class="form-floating mb-3">
                <input type="text" name="id" class="form-control" id="floatingInput" placeholder="Id">
                <label for="floatingInput">ID del usuario a actualizar</label>
            </div>
            <div class="form-floating">
                <input type="text" name="role" class="form-control" id="floatingInput" placeholder="Rol">
                <label for="floatingInput">Rol de usuario</label>
            </div>
            <input type="hidden" name="_method" value="PUT">
            <button type="submit" class="btn-submit">Actualizar rol del usuario</button>
    </form>
</div>

<div id="users" class="row d-flex justify-content-center"></div>