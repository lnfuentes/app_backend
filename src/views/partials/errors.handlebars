{{#if error}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{error}}
        <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">&times;</button>
    </div>
{{/if}}

{{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{message}}
        <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">&times;</button>
    </div>
{{/each}}