<h1 class="fw-light display-5">Carrito</h1>
<div class="line"></div>

{{#if products}}
<div class="purchase">
    {{#each products}}
    <div class="card mb-3 products" style="max-width: 700px;">
        <div class="row g-0">
            <div class="col-md-4">
            <img src={{this.thumbnail}} class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
            <div class="card-body">
                <h2>{{ this.title }}</h2>
                <p class="card-text description">{{ this.description }}</p>
                <p class="card-text price">${{ this.price }}</p>
            </div>
            </div>
        </div>
    </div>
    {{/each}}
    <div class="card text-center total" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Total a pagar</h5>
            <p class="card-text price">${{total}}</p>
            <form action="/api/carts/purchase" method="POST">
                <button class="btn-purchase">Finalizar compra</button>
            </form>
        </div>
    </div>
</div>
{{else}}
    <h2>El carrito esta vac√≠o.</h2>
{{/if}}